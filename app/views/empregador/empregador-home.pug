extends ../layout

block menu
	nav.menu.col-right
		ul
			li
				a(href="/empregador/publicar-vaga") PUBLICAR VAGA
			li
				a(href="/empregador/pesquisar-candidatos") PESQUISAR CANDIDATOS
			li
				a(href="/empregador/minha-conta") MINHA CONTA
			li.a-btn
				a(href="/logout") TERMINAR SESSÃO

block content
	.pages.wrap
		h1 As suas vagas

		.vagas-listing
			table
				thead
					tr
						td #
						td Cargo
						td Data de publicação
						td Total candidaturas
						td Dias restantes
						td Estado
						td Opções

				tbody
					each vaga, i in Vagas
						tr
							td #{i+1}
							td 
								a(href!="/empregador/vagas/" + vaga.ID) #{vaga.cargo}
							td #{vaga.dataDePublicacao}
							td
							td #{vaga.diasRestantes}
							td
							td 
								a(href!="/empregador/vagas/editar/" + vaga.ID) Editar
								span &nbsp; | &nbsp;
								a(href!="/empregador/vagas/remover/" + vaga.ID) Remover


	

