extends ./empregador-home

block title
	title Alterar password - Jobz

block content
	.pages.wrap
		h1 Alterar password
		p Use o formul√°rio abaixo para alterar a password da sua conta.
		.jb-space
		
		block erro
			if formError
				.erro #{formError}
				.jb-space.single

		block notificacao
			if notificacao
				div.notificacao #{notificacao}
				.jb-space

		form(action="/empregador/minha-conta/alterar-password" method="post")
			.form-inp
				.col-left
					label Password actual
					input(type="password" name="passwordActual" minlength="8" maxlength="20" placeholder="******" required)

				.col-left
					label Nova password
					input(type="password" name="novaPassword" minlength="8" maxlength="20" placeholder="******" required)

			.form-inp
				.col-left
					button Guardar
					