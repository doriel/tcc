extends ./candidato-home

block title
	title Carregar fotografia - Jobz

block content
	.pages.wrap
		h1 Carregar o Fotografia.
		p Fa√ßa o upload do de uma foto sua actualizada e aumente as suas chances de ser contratado.
		.jb-space

		block erro
			if formError
				.erro #{formError}
				.jb-space.single

		block notificacao
			if notificacao
				div.notificacao #{notificacao}
				.jb-space
					
		form(action="/candidato/minha-conta/carregar-fotografia" method="post" enctype="multipart/form-data")
			.form-inp
				.col-left
					label Fotografia (.jpg / .png)
					input(type="file" name="foto" accept="image/x-png,image/jpeg")
					
			.form-inp
				.col-left
					button.btn Guardar
					