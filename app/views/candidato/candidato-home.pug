extends ../layout

block menu
	nav.menu.col-right
		ul
			li
				a(href="/candidato") CANDIDATURAS
			li
				a(href="/candidato/meu-perfil") MEU PERFIL
			li
				a(href="/candidato/minha-conta") MINHA CONTA
			li.a-btn
				a(href="/logout") TERMINAR SESSÃO

block content
	.pages.wrap
		if Candidaturas
			h1 As suas candidaturas
			.jb-space
			.vagas-listing
				table
					thead
						tr
							td #
							td Cargo
							td Data da candidatura
							td Data limite
							//td Dias restantes
							//td Estado
							td Opções

					tbody
						each candidatura, i in Candidaturas
							tr
								td #{i+1}
								td 
									a(href="/vaga/" + candidatura.idVaga) #{candidatura.cargo}
								td #{candidatura.data_da_candidatura}
								td #{candidatura.data_limite}
								td
									a(href="/candidato/cancelar-candidatura/" + candidatura.idCandidatura + "/" + candidatura.idVaga) Cancelar a candidatura
		else
			h1 Ainda não realizou nenhuma candidatura.
			.jb-space.single


	

